# ════════════════════════════════════════════════════════════
# CurtainCall Backend - Environment Configuration
# ════════════════════════════════════════════════════════════

# Flask Configuration
SECRET_KEY=curtaincall-secret-key-2024
JWT_SECRET_KEY=jwt-secret-key-2024
DEBUG=True

# Network Configuration
# Ganti dengan IP address komputer Anda
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# MQTT Broker Configuration
# Ganti dengan IP address komputer yang menjalankan MQTT broker
MQTT_BROKER_IP=127.0.0.1
MQTT_BROKER_PORT=1883
MQTT_KEEPALIVE=60
MQTT_TLS_ENABLED=False

# MongoDB Configuration
# Ganti dengan IP address komputer yang menjalankan MongoDB
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB_NAME=curtaincall

# Sensor Thresholds (dapat diubah via API)
TEMPERATURE_THRESHOLD=35.0
LIGHT_OPEN_THRESHOLD=250
LIGHT_CLOSE_THRESHOLD=500
