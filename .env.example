# ════════════════════════════════════════════════════════════
# NLP Service - Environment Configuration
# ════════════════════════════════════════════════════════════

# Flask Configuration
SECRET_KEY=nlp-service-secret-key-2024
DEBUG=True

# Network Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5001

# MQTT Broker Configuration
# Ganti dengan IP address komputer yang menjalankan MQTT broker
MQTT_BROKER_IP=127.0.0.1
MQTT_BROKER_PORT=1883
MQTT_KEEPALIVE=60

# MongoDB Configuration (untuk logging)
# Ganti dengan IP address komputer yang menjalankan MongoDB
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB_NAME=curtaincall

# Whisper Model Configuration
WHISPER_MODEL=base
# Options: tiny, base, small, medium, large
# Larger models = better accuracy but slower
# Recommended: base for good balance

# Audio Processing
MAX_AUDIO_SIZE_MB=10
ALLOWED_AUDIO_FORMATS=wav,mp3,m4a,ogg,webm
